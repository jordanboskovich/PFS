<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PFS Resources</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Arvo:ital,wght@0,400;0,700;1,400;1,700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');
    body { 
      background-color: #f5f5f5;
      font-family: 'Montserrat', sans-serif;
    }
    
    .resource-card {
        background-color: #CAF4D7;
        border: 6px outset #CAF4D7;
        margin-bottom: 20px; /* Add some space between cards */
    }

    .card-body {
        background-color: white;
        padding: 10%;
    }

    .form-control {
        border-color: #CBBBE7;
    }

    .btn-primary {
        background-color: #CBBBE7;
        border-color: #CBBBE7;
    }

    .btn-primary:hover {
        background-color: #B7A4C0;
        border-color: #B7A4C0;
    }
  </style>
</head>
<body>
  <%- include('partials/student_navbar') %>

  <div class="container mt-5">
    <div class="row" id="resource-list">
      <% resources.forEach(function(resource) { %>
        <div class="col-md-4">
          <div class="card resource-card">
            <div class="card-body">
              <h5 class="card-title"><%= resource.title %></h5>
              <p class="card-text"><%= resource.description %></p>
              <a href="<%= resource.link %>" class="btn btn-primary" target="_blank">Go to Resource</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
